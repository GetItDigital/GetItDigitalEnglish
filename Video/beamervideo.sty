\newcommand{\newvideofile}[2]{
    \iffileopened
        \docEnd
    \fi

    \def\videoname{#1}
    \def\videotitel{#2}

    %Open other files
    \immediate\openout\speechRenderVideoFileList=\jobname-RenderVideoFilelist-#1.txt
    \immediate\write\speechRenderVideoFileList{file '../../Video/Videovorlagen/intro_resample.mp4'}
